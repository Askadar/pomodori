satura = #ab00ff

.app
	header
		background white
		color satura
		padding 32px
		font-family 'Montserrat', sans-serif
		text-align center
		h1
			margin 0
			font-weight 400
	button
		border none
		background none
		outline none
		padding 8px
		margin 4px
		min-width 64px
		font-weight 500
		font-family 'Montserrat', sans-serif
		border 1px solid satura
	.app-row
		min-width 320px
		max-width 480px
		margin auto
		text-align center
	.adjustableInput
		display block
		margin 8px 16px
		input
			max-width 6rem

.App {
  text-align: center;
}

.App-appIcon {
  animation: App-logo-spin infinite 20s linear;
  height: 80px;
}

.App-header {
  background-color: #222;
  height: 150px;
  padding: 20px;
  color: white;
}

.App-title {
  font-size: 1.5em;
}

.App-intro {
  font-size: large;
}

@keyframes App-logo-spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}
