	// 	circle = 96px
	// 	box-sizing content-box
	// 	height circle
	// 	width circle
	// 	margin  8px auto
	// 	position relative
	// 	border-radius 50%
	// 	border 2px solid satura
	span.time-text
		margin-top 88px
		display inline-block

.App {
  text-align: center;
}

.App-appIcon {
  animation: App-logo-spin infinite 20s linear;
  height: 80px;
}

.App-header {
  background-color: #222;
  height: 150px;
  padding: 20px;
  color: white;
}

.App-title {
  font-size: 1.5em;
}

.App-intro {
  font-size: large;
}

@keyframes App-logo-spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}
