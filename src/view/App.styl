@import '~stylus/colors'

@media screen and (max-width: 768px)
	html
		font-size 20px

.app
	header
		background white
		color satura
		padding 24px
		font-family 'Montserrat', sans-serif
		text-align center
		h1
			font-size 1.6rem
		h1
		h4
			margin 0
			font-weight 400
		.right
			text-align right
	button
		border none
		background none
		outline none
		padding 8px
		margin 4px
		font-size 0.9rem
		min-width 64px
		font-weight 500
		font-family 'Montserrat', sans-serif
		border 1px solid satura
		&:disabled
			border-color saturaBleaked
	.adjustableInput
		display block
		margin 8px 16px
		input
			max-width 6rem
