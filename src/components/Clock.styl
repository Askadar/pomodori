tr(enabled, duration = 280ms)
	transition duration all ease-in-out

clockSize = 50px

satura = #ab00ff
saturaBleaked = #e0b2f7
mesame = #61aac2
mesameBleaked = #cfe5ed
fulla = #009ad6

body *
	box-sizing border-box

.box
	position relative
	overflow hidden
	width clockSize * 5
	height clockSize * 4.5
	margin 24px auto
	.outer-ring
		border 2px solid satura
		border-radius 50%
		width clockSize * 4
		height clockSize * 4
		margin 16px auto
		position relative
		background rgba(255,255,255,0.7)
	.arrow
		position absolute
		left 50%
		top 50%
		transform-origin 50% 0%
		transform rotateZ(180deg)
		height 90px
		width 1px
		&.unused:after
			display none
		&:after
			height 90px
			position absolute
			top 0px
			left -1px
			content ''
			border 1px solid satura
			width 2px
			z-index 3
			box-sizing border-box
		&.hours
			&:after
				height clockSize * 0.9
				top clockSize * 0.8
				width 4px
				left -2px
			transform rotateZ(90deg)
		&.minutes
			&:after
				height clockSize * 0.9
				top clockSize * 0.7
				width 3px
				left -1.5px
			transform rotateZ(270deg)
		&.seconds
			&:after
				height clockSize * 1
				top clockSize * 0.7
				width 1px
				left -0.5px
			transform rotateZ(180deg)
	.base
		baseWidth = 20px
		width clockSize + baseWidth*2
		height clockSize
		border 4px solid mesame
		border-radius 50%
		position absolute
		top clockSize * 4
		left - baseWidth
		z-index -1
